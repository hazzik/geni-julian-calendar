{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges"
  ],
  "bumpVersion": "patch",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true,
    "bumpVersion": "patch"
  },
  "packageRules": [
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/mozilla/web-ext",
        "https://github.com/fregante/web-ext-submit"
      ],
      "groupName": "Web-ext"
    }
  ]
}
